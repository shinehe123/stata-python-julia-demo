{
  "name": "Stata-Python-Julia Environment",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/julia:1": {
      "version": "1.9"
    }
  },
  "postCreateCommand": "pip install -r ./python/requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "julialang.language-julia"
      ]
    }
  }
}
